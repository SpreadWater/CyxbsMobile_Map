<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:weightSum="100"
    android:background="@color/whiteBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">
    <ImageView
        android:id="@+id/map_iv_search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:padding="14dp"
        android:src="@drawable/common_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/map_et_search_place"
        app:layout_constraintTop_toTopOf="@id/map_et_search_place"
        app:layout_constraintVertical_bias="0.32999998"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/map_et_search_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/map_shape_research_place"
        android:hint="大家都在搜：风雨操场"
        android:imeOptions="actionSearch"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:paddingStart="34dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
        android:textColor="@color/levelTwoFontColor"
        app:layout_constraintStart_toEndOf="@id/map_iv_search_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/map_iv_search_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/map_ic_search_before"
        app:layout_constraintStart_toStartOf="@id/map_et_search_place"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/map_iv_search_content_cancel"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        android:visibility="gone"
        android:src="@drawable/map_ic_search_cancel"
        app:layout_constraintEnd_toEndOf="@id/map_et_search_place"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/map_tv_search_deleteall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除全部"
        android:textColor="@color/levelThreeFontColor"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/map_tv_search_history"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toRightOf="@id/map_tv_search_history"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map_tv_search_history" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/map_tv_search_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/levelThreeFontColor"
        android:textSize="15sp"
        android:text="历史记录"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/map_rv_search"
        app:layout_constraintTop_toBottomOf="@id/map_et_search_place"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/map_rv_search"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_tv_search_history">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>