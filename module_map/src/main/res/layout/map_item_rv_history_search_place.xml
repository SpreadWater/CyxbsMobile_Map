<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:layout_width="match_parent"
    android:background="@color/whiteBackground"
    tools:ignore="ResourceName"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/tv_map_history_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="大西北"
        android:textColor="@color/map_tv_history_item_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_map_history_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/map_ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/tv_map_history_place"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_map_history_place" />
</androidx.constraintlayout.widget.ConstraintLayout>